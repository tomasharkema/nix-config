{
  "nix.enableLanguageServer": true,
  "nix.serverPath": "nixd",
  "nix.formatterPath": "nixpkgs-fmt",
  "nix.serverSettings": {
    "nil": {
      "diagnostics": {},
      "formatting": {
        "command": ["nixpkgs-fmt"]
      },
      "flake": {
        "autoArchive": true,
        "autoEvalInputs": true,
        "nixpkgsInputName": "nixpkgs"
      }
    },
    "nixd": {
      "eval": {
        "target": {
          "args": ["-f", "flake.nix"]
        }
      },
      "formatting": {
        "command": "nixpkgs-fmt"
      },
      "options": {
        "enable": true,
        "target": {
          "args": ["-f", "flake.nix"]
        }
      }
    }
  },
  "editor.formatOnSave": true,
  "editor.formatOnPaste": true,
  "[nix]": {
    "editor.insertSpaces": true,
    "editor.tabSize": 2
  },
  "editor.defaultFormatter": "jnoortheen.nix-ide"
}
