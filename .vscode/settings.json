{
  "nix.enableLanguageServer": true,
  "nix.serverPath": "nil",
  "nix.serverSettings": {
    "nil": {
      "formatting": {
        "command": ["alejandra"]
      },
      "nix": {
        "maxMemoryMB": 4096,
        "flake": {
          "autoArchive": true,
          "autoEvalInputs": true
        }
      }
    }
  },
  "[nix]": {
    "editor.defaultFormatter": "kamadorueda.alejandra",
    "editor.formatOnPaste": true,
    "editor.formatOnSave": true,
    "editor.formatOnType": false
  }
}
