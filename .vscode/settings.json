{
  "nix.enableLanguageServer": true,
  "nix.serverPath": "nixd",
  "nix.formatterPath": ["nix", "fmt", "--", "-"],
  "nix.serverSettings": {
    // settings for 'nil' LSP
    "nil": {
      "diagnostics": {
        "ignored": ["unused_binding", "unused_with"]
      },
      "formatting": {
        "command": ["nix", "fmt", "--", "-"]
      }
    },
    "nixd": {
      "eval": {
        // stuff
      },
      "formatting": {
        "command": "nixpkgs-fmt"
      },
      "options": {
        "enable": true,
        "target": {
          // tweak arguments here
          "args": [],
          // NixOS options
          "installable": "<flakeref>#nixosConfigurations.enceladus.options"

          // Flake-parts options
          // "installable": "<flakeref>#debug.options"

          // Home-manager options
          // "installable": "<flakeref>#homeConfigurations.<name>.options"
        }
      }
    }
  }
}
