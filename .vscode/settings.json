{
  "nix.enableLanguageServer": true,
  // "nix.serverPath": "nixd",
  "nix.serverPath": "nil",
  "nix.formatterPath": "alejandra",

  "nix.serverSettings": {
    "nil": {
      "formatting": {
        "command": ["alejandra"]
      }
    }
  },

  "[nix]": {
    "editor.defaultFormatter": "kamadorueda.alejandra",
    "editor.formatOnPaste": false,
    "editor.formatOnSave": true,
    "editor.formatOnType": false
  },
}
