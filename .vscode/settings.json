{
  "nix.enableLanguageServer": true,
  "nix.serverPath": "nixd",
  "nix.serverSettings": {
    "nil": {
      "diagnostics": {},
      "formatting": {},
      "flake": {
        "autoArchive": true,
        "autoEvalInputs": true,
        "nixpkgsInputName": "nixpkgs"
      }
    },
    "nixd": {
      "eval": {
        "target": {
          "args": ["-f", "flake.nix"]
        }
      },
      "formatting": {},
      "options": {
        "enable": true,
        "target": {
          "args": ["-f", "flake.nix"]
        }
      }
    }
  },
  "[nix]": {
    "editor.defaultFormatter": "kamadorueda.alejandra",
    "editor.formatOnPaste": true,
    "editor.formatOnSave": true,
    "editor.formatOnType": false
  }
}
